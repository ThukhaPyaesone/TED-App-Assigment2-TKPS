<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="@dimen/margin_medium_2"
    android:orientation="horizontal"
    android:weightSum="8.5">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/iv_watch_next_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/watch_next_profile" />

        <TextView
            android:id="@+id/tv_watch_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_watch_next_image"
            android:layout_alignRight="@+id/iv_watch_next_image"
            android:layout_margin="@dimen/margin_medium"
            android:background="@android:color/black"
            android:text="11:00"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_regular_2x" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_weight="4">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kevin Breel"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x" />


        <TextView
            android:id="@+id/tv_ted_talk_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_below="@+id/tv_user_name"
            android:text="Confessions of a depressed comic"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:drawableLeft="@drawable/ic_more_vert_black_24dp" />
</LinearLayout>